# Setup grep color and default options
GREP_COLORS="ms=01;31:mc=01;31:sl=:cx=:fn=01;30:ln=01;30:bn=32:se=37"

# Set human redable size format for various commands
BLOCK_SIZE=human-readable

# Setup `less` options
LESSCHARSET=utf-8
LESSCOLOR=yes

# Setup history
HISTCONTROL=ignoredups:erasedups
HISTSIZE=1000000
# NOTE Non numeric (or negative) value inhibits trunkation
HISTFILESIZE=unlimited
HISTIGNORE="&:[ ]*:exit:ls:ll:pwd:mc:su:df:du:du0:du1:clear:pushd:popd:reset:fg:bg:ipython:rm -rf *"

# Setup some paludis and system options
CONFIG_PROTECT=/etc/localtime

# Set some DE and graphics related options
GDFONTPATH='/usr/share/fonts/util:/usr/share/fonts/default:/usr/share/fonts/zaufi-fontset:/usr/share/fonts/encodings:/usr/share/fonts/encodings/large:/usr/share/fonts/terminus:/usr/share/fonts/dejavu:/usr/share/fonts/anonymous-pro:/usr/share/fonts/corefonts:/usr/share/fonts/intlfonts:/usr/share/fonts/urw-fonts'
KDE_USE_IDN=ru

# Strip loo long directory names from command prompt
PROMPT_DIRTRIM=3

#CCACHE_SIZE=4G
#CCACHE_DIR=/storage/tmp/ccache

NODE_PATH=/usr/lib64/node_modules

# Since GDB 7.10 (200 commands more than enough)
GDBHISTSIZE=200

# Set GCC diagnostic colors
GCC_COLORS='error=1;31:warning=1;38;2;120;70;20:note=01;32:caret=01;31:locus=1;38;2;80;80;80:quote=3;38;2;130;110;75'
